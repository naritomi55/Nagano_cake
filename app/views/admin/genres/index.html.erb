<h1>ジャンル一覧・追加</h1>
<%= form_with model: @genre, url: admin_genres_path do |f| %>
  <div class="row w-50 h-50">
    <div class="col-3">
      <%= f.label "ジャンル" %>
    </div>
    <div class="col-8">
      <%= f.text_field :name %>
    </div>
    <div class="col-1">
      <%= f.submit '新規登録', class: 'btn btn-success' %>
    </div>
  </div>
<% end %>
</br>

<table class="table table-hover table-inverse border-bottom col-5">
  <thead class="thead-light">
    <tr>
      <th>ジャンル</th>
    </tr>
  </thead>
    <tbody>
      <% @genres.each do |genre| %>
       <tr>
        <td>
          <%= genre.name %>
          <span style="float: right;"><%= link_to '編集する', edit_admin_genre_path(genre.id), class: 'btn btn-success' %></span>
        </td>
       </tr>
      <% end %>
    </tbody>
</table>


