<h1>注文履歴一覧</h1>

<table class="table table-hover table-inverse">
　<thead>
   <tr>
     <th>購入日時</th>
     <th>購入者</th>
     <th>注文個数</th>
     <th>注文ステータス</th>
    </tr>
　</thead>
    <tbody>
    <% @orders.each do |order| %>
        <tr>

          <td><%= order.created_at %></td>

          <td><%= customer %></td>

          <td><%= amount %></td>

          <td><%= status %></td>
        </tr>
      <% end %>
    </tbody>
　</table>
　<%= paginate @orders %>