<div class="container">
<h1>商品一覧</h1>
<div class="text-right">
  <a href="/admin/items/new" class="btn btn-secondary rounded-circle">+</a>
</div>
 <table class="table table-hover border-bottom table-inverse">
　<thead class="thead-light">
   <tr>
     <th>商品ID</th>
     <th>商品名</th>
     <th>税抜価格</th>
     <th>ジャンル</th>
     <th>ステータス</th>
    </tr>
　</thead>
    <tbody>
    　<% @items.each do |item| %>
    　　<tr>
        　<td><%= item.id %></td>

          <td>
            <%= link_to admin_item_path(item.id) do %>
             <%= item.name %>
            <% end %>
          </td>

          <td><%= item.price %></td>

          <td><%= item.genre.name %></td>

        　<td><%= item.is_active == true ? "販売中" : "販売停止" %></td>
        </tr>
    　<% end %>
    </tbody>
　</table>
　<%= paginate @items %>
</div>

