<h1>商品新規登録</h1>
  <%= form_with model: @item, url: admin_items_path do |f| %>
    <div class="container">
      <div class="form-group row">
        <div class="col-5 text-center">
          <h4>商品画像</h4>
        </div>
        <div class="col-7">
          <%=f.file_field :image, accept: "image/*" %>
        </div>
      </div>
      <div class="form-group row">
        <div class="col-5 text-center">
          <%= f.label "商品名" %>
        </div>
        <div class="col-7">
          <%= f.text_field :name %>
        </div>
      </div>
      <div class="form-group row">
        <div class="col-5 text-center">
          <%= f.label "商品説明" %>
        </div>
        <div class="col-7">
          <%= f.text_area :introduction %>
        </div>
      </div>
      <div class="form-group row">
        <div class="col-5 text-center">
          <%= f.label "ジャンル" %>
        </div>
        <div class="col-7">
          <%= f.select :genre_id, @genres.map{ |genre| [genre.name, genre.id] }%>
        </div>
      </div>
      <div class="form-group row">
        <div class="col-5 text-center">
          <%= f.label "税抜価格" %>
        </div>
        <div class="col-7">
          <%= f.number_field :price %>円
        </div>
      </div>
      <div class="form-group row">
        <div class="col-5 text-center">
          <%= f.label "販売ステータス" %>
        </div>
        <div class="col-7">
          <%= f.radio_button :is_active, true %>販売中
          <%= f.radio_button :is_active, false %>販売停止中
        </div>
      </div>
      <div class="form-group row">
        <div class="col-12 text-center">
          <%= f.submit '新規登録', class:"action btn btn-success" %>
        </div>
      </div>
    </div>
  <% end %>
