<div class="container">
  <h4>配送先編集</h4>
  </br>
  <%= form_with model: @address, url: address_path, method: :patch do |f| %>

    <div class="row">
      <div class="col-4 text-left mb-auto"><%= f.label "郵便番号（ハイフンなし）" %></div>
      <div class="col-6 text-left"><%= f.text_field :postal_code %></div>
    </div>
    </br>
    <div class="row">
      <div class="col-4 text-left mb-auto"><%= f.label "住所" %></div>
      <div class="col-8 text-left"><%= f.text_field :address %></div>
    </div>
    </br>
    <div class="row">
      <div class="col-4 text-left mb-auto"><%= f.label "宛名" %></div>
      <div class="col-6 text-left"><%= f.text_field :name %></div>
      <div class="col-2"><%= f.submit '変更内容を保存', class:"btn btn-success" %></div>
    </div>
    </br>
  <% end %>
</div>