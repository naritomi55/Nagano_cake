<div class="container">
  <h4>会員情報編集</h4>
    <%= form_with model: @customer, url: customers_path, method: :patch do |f| %>
        </br>

        <div class="row">
          <div class="col-2 text-left mb-auto"><%= f.label "氏名" %></div>
          <div class="col-10 text-left"><%= f.text_field :last_name %>　<%= f.text_field :first_name %></div>
        </div>
        </br>

        <div class="row">
          <div class="col-2 text-left mb-auto"><%= f.label "フリガナ" %></div>
          <div class="col-10 text-left"><%= f.text_field :last_name_kana %>　<%= f.text_field :first_name_kana %></div>
        </div>
        </br>

        <div class="row">
          <div class="col-2 text-left mb-auto"><%= f.label "郵便番号" %></div>
          <div class="col-10 text-left"><%= f.text_field :postal_code %></div>
        </div>
        </br>

        <div class="row">
          <div class="col-2 text-left mb-auto"><%= f.label "住所" %></div>
          <div class="col-10 text-left"><%= f.text_field :address %></div>
        </div>
        </br>

        <div class="row">
          <div class="col-2 text-left mb-auto"><%= f.label "電話番号" %></div>
          <div class="col-10 text-left"><%= f.text_field :telephone_number %></div>
        </div>
        </br>

        <div class="row">
          <div class="col-2 text-left mb-auto"><%= f.label "メールアドレス" %></div>
          <div class="col-10 text-left"><%= f.text_field :email %></div>
        </div>

        <div class="row mt-5">
          <div class="col-md-4 offset-md-4">
            <%= f.submit '編集内容を保存', class:"btn btn-success" %>
          </div>
          <div>
            <%= link_to '退会する', customers_confirm_path, class:"btn btn-danger" %>
          </div>
        </div>

    <% end %>
</div>
