<div class="container">
  <%= render 'genre search', genres: @genres %>

  <h2>新着商品</h2>
  <div class="row">
    <% @items.each do |item| %>
      <div class="mr-auto">
          <%= link_to item_path(item.id) do %>
            <%= image_tag item.image, size: "180x100" %></br>
          <% end %>
        <%= item.name %></br>
        ￥<%= item.price %>
      </div>
    <% end %>
  </div>
  <div class="text-right">
    <%= link_to "すべての商品を見る", items_path %>
  </div>
</div>
