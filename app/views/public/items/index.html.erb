<div class="container">
  <div class="row-col-3">
    <table class="table table-hover table-inverse border col-3">
      <thead>
        <tr>
          <th>ジャンル検索</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td>
            <% @genres.each do |genre| %>
              <%= link_to items_path(genre_id: genre.id) do %>
                <%= genre.name %>
              <% end %></br>
            <% end %>
          </td>
        </tr>
      </tbody>
    </table>
    </div>
    <h4><%= @text %>一覧（全<%= @items.count %>件）</h4>
    <div class="row">
      <% @items.each do |item| %>
        <div class="mr-auto">
          <%= link_to item_path(item.id) do %>
            <%= image_tag item.image, size: "180x100" %></br>
          <% end %>
          <%= item.name %></br>
          ￥<%= item.price %>
        </div>
      <% end %>
    </div>
  </div>
  <%= paginate @items %>
</div>