<div class="container">
  <div>
    <p>ジャンル検索</p>
      <% @genres.each do |genre| %>
        <%= link_to items_path(genre_id: genre.id) do %>
          <%= genre.name %>
        <% end %>
      <% end %>
  </div>
  <div>
    <h4><%= @text %>一覧（全<%= @items.count %>件）</h4>
    <div class="row">
      <% @items.each do |item| %>
        <div class="mr-auto">
          <%= link_to item_path(item.id) do %>
            <%= image_tag item.image, size: "180x100" %></br>
          <% end %>
          <%= item.name %></br>
          ￥<%= item.price %>
        </div>
      <% end %>
    </div>
  </div>
  <%= paginate @items %>
</div>