<div class="container">
  <h3>注文情報確認</h3>
  <div class="row">
    <div class="col-md-7 offset-md-1">
      <table class="table table-hover table-inverse border">
        <thead class="thead-light">
          <tr>
            <th>商品名</th>
            <th>単価(税込)</th>
            <th>数量</th>
            <th>小計</th>
          </tr>
        </thead>
          <tbody>
            <% sum = 0 %>
            <% @cart_items.each do |item| %>
            <tr>
              <td>
                <%= image_tag item.item.image, size:"40x30" %>
                <%= item.item.name %>
              </td>
              <td>
                <%= item.item.add_tax_price %>
              </td>
              <td>
                <%= item.amount %>
              </td>
              <td>
                <%= (item.item.add_tax_price)*(item.amount) %>
                <% sum = sum+(item.item.add_tax_price)*(item.amount) %>
              </td>
            </tr>
            <% end %>
          </tbody>
      </table>
    </div>
    <div class="col-md-3 offset-md-1">

      <div class="row">
        <p class="font-weight-bold">送料</p>
        <div class="col"><%= @order.shipping_cost %></div>
      </div>

      <div class="row">
        <p class="font-weight-bold">商品合計</p>
        <div class="col"><%= sum %></div>
      </div>

      <div class="row">
        <p class="font-weight-bold">請求金額合計</p>
        <div class="col"><%= sum+@order.shipping_cost %></div>
      </div>
    </div>
  </div>
  <span class="font-weight-bold">支払方法</span>
    <%= @order.payment_method_i18n %></br>
  <span class="font-weight-bold">お届け先</span>
    〒<%= @order.postal_code %><%= @order.address %></br>
    <%= @order.name %></br>
  <div class="text-center">
    <%= form_with model: @order, url: orders_path, method: :post do |f| %>
      <%= f.hidden_field :name %>
      <%= f.hidden_field :address %>
      <%= f.hidden_field :postal_code %>
      <%= f.hidden_field :payment_method %>
      <%= f.hidden_field :shipping_cost %>
      <%= f.hidden_field :total_payment, value: sum+@order.shipping_cost %>
      <%= f.submit "注文を確定する" , class:"btn btn-success"%>
    <% end %>
  </div>
</div>
