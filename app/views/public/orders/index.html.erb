<div class="container">
  <h3>注文履歴一覧</h3>
    <table class="table table-hover border table-inverse">
    　<thead class="thead-light">
       <tr>
         <th class="col-2">注文日</th>
         <th class="col-3">配送先</th>
         <th class="col-2">注文商品</th>
         <th class="col-1">支払金額</th>
         <th class="col-2">ステータス</th>
         <th class="col-2">注文詳細</th>
        </tr>
    　</thead>
    　<tbody>
        <% @orders.each do |order| %>
          <tr>
            <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
            <td><%= order.address %></td>
            <td>
              <% order.order_details.each do |item| %>
                <%= item.item.name %></br>
              <% end %>
            </td>
            <td><%= order.total_payment+order.shipping_cost %>円</td>
            <td><%= order.status_i18n %></td>
            <td><%= link_to "表示する", order_path(order.id), class:"btn btn-info" %></td>
          </tr>
        <% end %>
    　</tbody>
    </table>
</div>