<div class="container">
  <h2>新規会員登録</h2></br>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "public/shared/error_messages", resource: resource %>

    <div class="form-group row">
      <div class="col-2 text-left mb-auto"><%= f.label "名前" %></div>
      <div class="col-10 text-left">
      　　（姓）　<%= f.text_field :last_name, autofocus: true, autocomplete: "姓" %>
      　　（名）　<%= f.text_field :first_name, autofocus: true, autocomplete: "名" %>
      </div>
    </div>

    <div class="form-group row">
      <div class="col-2 text-left mb-auto"><%= f.label "フリガナ" %></div>
      <div class="col-10 text-left">
        　　（セイ）<%= f.text_field :last_name_kana, autofocus: true, autocomplete: "セイ" %>
       　　 （メイ）<%= f.text_field :first_name_kana, autofocus: true, autocomplete: "メイ" %>
      </div>
    </div>

    <div class="form-group row">
      <div class="col-3 text-left mb-auto"><%= f.label "メールアドレス" %></div>
      <div class="col-9 text-left">
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>
    </div>

    <div class="form-group row">
      <div class="col-3 text-left mb-auto"><%= f.label "郵便番号(ハイフンなし)" %></div>
      <div class="col-9 text-left">
        <%= f.text_field :postal_code, autofocus: true, autocomplete: "郵便番号" %>
      </div>
    </div>

    <div class="form-group row">
      <div class="col-3 text-left mb-auto"><%= f.label "住所" %></div>
      <div class="col-9 text-left">
      <%= f.text_field :address, autofocus: true, autocomplete: "住所" %>
      </div>
    </div>

    <div class="form-group row">
      <div class="col-3 text-left mb-auto"><%= f.label "電話番号" %></div>
      <div class="col-9 text-left">
      <%= f.text_field :telephone_number, autofocus: true, autocomplete: "電話番号" %>
      </div>
    </div>

    <div class="form-group row">
      <div class="col-3 text-left mb-auto"><%= f.label "パスワード" %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> 文字以上)</em>
      <% end %>
      </div>
      <div class="col-9 text-left">
      <%= f.password_field :password, autocomplete: "new-password" %>
      </div>
    </div>

    <div class="form-group row">
      <div class="col-3 text-left mb-auto"><%= f.label "パスワード(確認用)" %></div>
      <div class="col-9 text-left">
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>
    </div>

    <div class="actions col-md-3 offset-md-3">
      <%= f.submit "新規登録", class:'btn btn-success d-grid gap-2 col-10 mx-auto' %>
    </div>
  <% end %>

  <h4>既に登録済みの方</h4>
  　　<%= render "public/shared/links" %>からログインしてください。
</div>